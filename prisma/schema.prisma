// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  role     MemberType

  @@map("users")
}

model Member {
  id             BigInt     @id @default(autoincrement())
  name           String
  email          String     @unique
  birthDate      DateTime
  userame        String     @unique
  cpf            String     @unique
  rg             String     @unique
  passport       String     @unique
  lsdEmail       String     @unique
  secondaryEmail String?    @unique
  memberType     MemberType
  lattes         String     @unique
  roomName       String
  hasKey         Boolean    @default(true)
  isActive       Boolean    @default(true)

  @@map("members")
}

enum MemberType {
  ADMIN
  STUDENT
  SUPPORT
  PROFESSOR
  EXTERNAL
}
