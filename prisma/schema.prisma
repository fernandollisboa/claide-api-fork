generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id      Int      @id @default(autoincrement())
  name    String  
  email   String  @unique
  password String
  role Role @default(STANDARD)
  @@map("users")
}

model Project{
  id  Int @id @default(autoincrement())
  name String
  creationDate DateTime
  endDate DateTime? 
  building String?
  room String?
  embrapii_code String?
  financier String? 
  status Boolean @default(true)

}

enum PersonType {
  PROFESSOR
  STUDENT
  PROFISSIONAL
  EXTERNAL
}

enum Role {
  ADMIN
  STANDARD
  SUPPORT
}